local arg = {...}

if arg[1] == nil then
	print("fileType <set> <path/file> ")
end

option = arg[1]
path = arg[2]
arg = arg[3]
if option == "set" and path ~= nil and arg ~= nil then
	filetype.set(shell.resolve(path), arg)
elseif option == "strip" and path ~= nil then 

	local file = fs.open(shell.resolve(path), "r")
	temp = file.readAll()
	file.close()
	temp = filetype.strip(temp)
	local file = fs.open(shell.resolve(path), "w")
	file.write(temp)
	file.close()

elseif option == "is" and path ~= nil and arg ~= nil  then 
	print(filetype.is(shell.resolve(path), arg))
end
